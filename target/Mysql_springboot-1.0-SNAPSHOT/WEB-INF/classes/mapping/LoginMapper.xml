<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wantwant.mapper.LoginMapper">
    <resultMap id="BaseResultMap" type="com.wantwant.pojo.AntiTest">
        <result column="computername" jdbcType="NVARCHAR" property="computername" />
        <result column="createdate" jdbcType="TIMESTAMP" property="createdate" />
        <result column="cnt" jdbcType="NUMERIC" property="cnt" />
        <result column="id" jdbcType="NUMERIC" property="id" />
    </resultMap>

    <!-- 登录验证-->
    <select id="userlogin" resultMap="BaseResultMap">
    SELECT computername,createdate,cnt,id FROM anti_test WHERE computername = #{user_name} AND id = #{password}
  </select>
    <!-- 注册语句-->
    <insert id="adduser">
    INSERT INTO anti_test (computername,createdate,cnt,id) VALUES (#{user_name},#{createdate,jdbcType=DATE},#{computecnt},#{password})
  </insert>

</mapper>